#include<iostream>
using namespace std;
int main()
{
	int p, r, t, i;
	cout<<"\n\n calculate the simple interst :\n";
    cout<<"\n\n calculate the simple interst :\n";	
	cout<<" input the principal:";
	cin>>p;
	cout<<" input the rate of interest:";
	cin>>r;
	cout<<" input the time:";
	cin>>t;
	i=(p*r*t)/100;
	cout<<" the simple interest for the amount "<<p<<" for "<<t<<" years @ "<<r<<" % is : "<<i;
	
	return 0;
}
